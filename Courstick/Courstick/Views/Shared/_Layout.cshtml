<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Courstick</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="css/homepageStyles.css"/>
    <link rel="stylesheet" href="~/Courstick.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="header_wrapper">
            <div class="half_of_header">
                <a href="/" class="logo">
                    COURSTICK
                    <img src="assets/logo.svg" class="logo-img"/>
                </a>
                <nav class="header_nav default_font_settings">
                    <a class="nav_item" href="/">
                        О нас
                    </a>

                    <a class="nav_item" href="/">
                        Курсы
                    </a>

                    <a class="nav_item" href="/">
                        Контакты
                    </a>
                    <a class="nav_item" href="/">
                        Обратная связь
                    </a>
                </nav>
            </div>

            <div class="half_of_header default_font_settings">
                <button class="big-button orange-button default_font_settings">
                    Регистрация
                </button>
                <a class="reg-link" href="/">
                    <img style="margin-right: 3px" src="assets/reg.svg" />
                    Войти
                </a>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-container">
            <p class="footer-font">
                © All rights reserved.
            </p>

            <button class="go-to-top-button">
                Подняться наверх
            </button>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
